{% extends 'base.html.twig' %}
{% block title %}Acteurs{% endblock %}
{% block pageTitle %}Acteurs{% endblock %}
{% block body %}
<h4 style="text-align : center;" >Tous les Acteurs</h4></br>
<button class="btn btn-dark"><a style="text-decoration:none; color:white;" href="{{ url('app_acteurs_create') }}">Ajoutez un autre acteur dans la liste</a></button></br></br>
<table width='75%' class="table table-success table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Date de naissance</th>
            <th>Date de mort</th>
            <th>Photo</th>
            <th>Modifications</th>
        </tr>
    </thead>
    <tbody>
        {% for acteur in acteurs %}
        <tr> 
            <td>{{ acteur.id }}</td>
            <td> <button class="btn btn-outline-light" style="text-decoration:none;"><a style="text-decoration:none; color:black;" href="{{ url('acteur', {'id': acteur.id}) }}" >{{ acteur.nom}}</a></button></td>
            <td> <button class="btn btn-outline-light" style="text-decoration:none;"> <a style="text-decoration:none; color:black;" href="{{ url('acteur', {'id': acteur.id}) }}" >{{ acteur.prenom}}</a></button></td>
            <td>{{ acteur.dateDeNaissance|date("d/m/Y")}}</td>
            <td>
            {% if acteur.dateDeMort is not null %}
            {{ acteur.dateDeMort|date("d/m/Y") }}
            {% endif %}
            </td>
            <td>
            {% if acteur.photo is not null %}
                <img src="{{ asset("Photos/"~acteur.photo) }}" width="200" />
            {% endif %}
            </td>
               <td>
                <button class="btn btn-success" > <a style="text-decoration:none; color:black;" href="{{ url('app_acteurs_edit', {'acteur': acteur.id}) }}">Modifier</a></button>
                <button class="btn btn-danger"><a style="text-decoration:none; color:white;" href="{{ url('app_acteurs_delete', {'acteur': acteur.id}) }}">Supprimer</a></button>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>


{% endblock %}